@model Readdit.Models.UpdateViewModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Details</h1>

        <h2>Users</h2>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => user.FirstName)</td>
                        <td>@Html.DisplayFor(model => user.LastName)</td>
                        <td>@Html.DisplayFor(model => user.Email)</td>
                        <td>@user.UserCreatedDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Books</h2>
        <table>
            <thead>
                <tr>
                    <th>Book Name</th>
                    <th>Author</th>
                    <th>Genre</th>
                    <th>Date Added</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => book.book_name)</td>
                        <td>@Html.DisplayFor(model => book.author_name)</td>
                        <td>@Html.DisplayFor(model => book.book_genre)</td>
                        <td>@book.date_added.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    <div class="form-group">
        <a class="btn btn-primary" asp-action="Index">Return</a>
    </div>
</body>
</html>
