@model Readdit.Models.MembersViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h2>To Be Read</h2>
<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.ToBeReadBooks)
        {
            <tr>
                <td>@book.book_name</td>
                <td>@book.author_name</td>
                <td>@book.book_genre</td>
            </tr>
        }
    </tbody>
</table>

<h2>Currently Reading</h2>
<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.CurrentlyReadingBooks)
        {
            <tr>
                <td>@book.book_name</td>
                <td>@book.author_name</td>
                <td>@book.book_genre</td>
            </tr>
        }
    </tbody>
</table>

<h2>Completed Reading</h2>
<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.CompletedReadingBooks)
        {
            <tr>
                <td>@book.book_name</td>
                <td>@book.author_name</td>
                <td>@book.book_genre</td>
            </tr>
        }
    </tbody>
</table>

<div class="col">
    <a style="text-decoration:none" href="/Members/Index">Return Home</a>
</div>